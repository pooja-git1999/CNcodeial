<h1>codeial/<%= title %>
</h1>

<section id="feed-post">
    <h4>Post</h4>
    <form action="/posts/create" method="post" id="new-post-form">
        <textarea name="content" id="" cols="30" rows="3" placeholder="type here..."></textarea>
        <input type="submit" value="Post">
    </form>
    <div id="posts-list-container">
        <ul>
            <% for(post of posts){ %>
                <li>
                    <p>
                        <%= post.content %>
                        <br>
                        <small>
                            <%= post.user.name %>
                        </small>
                    </p>
                    
                </li>
                <% } %>
        </ul>
    </div>
</section>